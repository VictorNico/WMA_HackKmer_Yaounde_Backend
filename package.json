    "@types/express": "^4.17.21",
    "@types/node": "^22.2.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.3"
